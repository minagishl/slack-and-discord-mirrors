{
  "name": "discord-bot-typescript-template",
  "version": "0.1.0",
  "description": "This is a Discord Bot template created in TypeScript, the key is that it is easy to manage!",
  "license": "MIT",
  "author": "minagishl",
  "type": "commonjs",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "esbuild": "rimraf dist && node scripts/build.js",
    "format": "prettier --write .",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:write": "prettier --write 'src/**/*.ts'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "register": "tsx src/register.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint:fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@slack/web-api": "^7.3.1",
    "@types/express": "^4.17.21",
    "axios": "^1.7.2",
    "columnify": "^1.6.0",
    "commander": "^12.0.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "sharp": "^0.33.4",
    "web-preview": "^0.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/columnify": "^1.5.4",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "7.7.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.56.0",
    "eslint-config-love": "^47.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.2",
    "typescript": "5.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.5.0"
  }
}
